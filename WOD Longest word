<script type="text/javascript">
	
	var wordsLength = 0;
	var samplewords = "In the language is inside"

	
	 
	 var wordsArray = samplewords.split(" ")

	 for (var i = 0; i < wordsArray.length; i++) {
	 	
	 	 if (wordsArray[i].length > wordsLength) {
	 	 	wordsLength = wordsArray[i].length
	 	

	 }
	 } 
	
	 



	console.log(wordsLength + " characters");
	console.log(wordsArray)
	console.log()
	








